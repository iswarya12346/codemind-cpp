#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int arr[n],flag=0;
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    double sum=0,avg;
    for(int i=0;i<n;i++){
        sum=sum+arr[i];
        avg=sum/n;
    }
    cout<<setprecision(2)<<fixed<<avg;
    return 0;
}
